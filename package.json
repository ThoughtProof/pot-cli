{
  "name": "pot-cli",
  "version": "0.1.0",
  "description": "ThoughtProof Proof-of-Thought CLI Tool",
  "main": "dist/index.js",
  "bin": {
    "pot": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "test": "node dist/index.js ask 'Test question' --dry-run"
  },
  "keywords": ["proof-of-thought", "ai", "cli"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "type": "module"
}
